{
  "name": "@basalt-lab/basalt-auth",
  "version": "1.1.0",
  "description": "Authentication module for Basalt Framework",
  "main": "Build/App.js",
  "types": "Build/App.d.ts",
  "scripts": {
    "build::pkg:windows": "npm run check-types && npm run create-types && cross-env ESBUILD_ENV=prod node esbuild.config.js",
    "build::pkg": "npm run check-types && npm run create-types && ESBUILD_ENV=prod node esbuild.config.js",
    "check-types": "tsc --noEmit",
    "create-types": "tsc --emitDeclarationOnly && tsc-alias",
    "dev::windows": "start cross-env ESBUILD_ENV=dev node esbuild.config.js && start node wait-and-watch.js",
    "dev": "ESBUILD_ENV=dev node esbuild.config.js & node wait-and-watch.js",
    "docs": "typedoc",
    "fix-lint": "eslint --fix . --ext .ts",
    "lint": "eslint . --ext .ts",
    "test:watch": "jest --watch -c jest.config.json",
    "test": "jest -c jest.config.json --ci --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Basalt-Lab/basalt-auth.git"
  },
  "keywords": [
    "basalt-auth",
    "basalt",
    "auth",
    "authentication"
  ],
  "author": "Ruby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Basalt-Lab/basalt-auth/issues"
  },
  "homepage": "https://github.com/Basalt-Lab/basalt-auth#readme",
  "devDependencies": {
    "@microsoft/tsdoc": "^0.14.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.4",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.50.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "typedoc": "^0.25.8",
    "typescript": "^5.2.2"
  }
}
